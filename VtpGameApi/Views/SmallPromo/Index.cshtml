@model  VtpGameApi.Models.ViewModel.ArticleVM
@{
	ViewBag.Title = "Index";

	string smallCol = Model.ArticleType == ArticleType.Custom ? "col-md-5" : "col-md-6";
	string bigCol = Model.ArticleType == ArticleType.Custom ? "col-md-10" : "col-md-12";
}

<div class="container">
	@if (Model.Article != null)
	{
		<div class="col-md-8 article">
			@if (!string.IsNullOrEmpty(Model.Article.ImageUri))
			{
				<div class="@smallCol">
					<img src="@Model.Article.ImageUri" />
				</div>
			}
			<div class="@(string.IsNullOrEmpty(Model.Article.ImageUri) ? bigCol : smallCol)">
				@if (!string.IsNullOrEmpty(Model.Article.Header))
				{
					<div>
						<a href="@Model.Article.Uri">@Model.Article.Header</a>
					</div>
				}
				@if (!string.IsNullOrEmpty(Model.Article.Body))
				{
					<div>@Model.Article.Body</div>
				}
			</div>
			@if (Model.ArticleType == ArticleType.Custom)
			{
				<div class="col-md-2">
					@Html.ActionLink("Edit", "Edit", "Article", new { id = Model.Article.ArticleId, controllerName = "SmallPromo", articleType = (int)ArticleType.Custom, count = Model.Count }, null)
				</div>
			}
		</div>
	}
	else if (Model.ArticleType == ArticleType.Custom)
	{
		<div class="col-md-offset-1 col-md-11">
			@Html.ActionLink("Add Article", "Add", "Article", new { controllerName = "SmallPromo", articleType = (int)ArticleType.Custom, count = Model.Count }, new { @class = "btn btn-default" })
		</div>
	}
</div>